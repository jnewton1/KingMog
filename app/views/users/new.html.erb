<div class=jumbotron>
  <div class=container>
  <div class=bckground>
<div align="center"; width="10%";>
    <h1>Registration</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <%= "Error in form" %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li> 
      <% end %>
    </ul>
  <% end %>
  <table>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td span=2;><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
       <td> <%= f.password_field :password_confirmation %></td>
    </tr>
 </table><br/>
  <%= f.submit %>
<% end %>
<!--Jimmy updated -->
</div>
</div>
</div>
</div>